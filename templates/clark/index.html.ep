% layout 'default'; 
%= form_for 'login', method => 'POST' => begin
  % if (my $error = stash 'error') {
  <div>
    <%= $error %>
  </div>
  % }
  <div style="color: black">
    Name<br>
    %= text_field 'name', class => '', required => ''
  </div>
  <div style="color: black">
    Password<br>
    %= password_field 'password', required => ''
  </div>
  %= csrf_field
  %= submit_button 'login'
% end

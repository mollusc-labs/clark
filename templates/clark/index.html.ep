% layout 'default';
%= form_for 'login', method => 'POST' => begin
  % if (my $message = stash 'message') {
  <div>
    <%= $message %>
  </div>
  % }
  <div>
    Name<br>
    %= text_field 'name', required => ''
  </div>
  <div>
    Password<br>
    %= password_field 'password', required => ''
  </div>
  %= csrf_field
  %= submit_button 'login'
% end
